# .env.example
# Archivo de ejemplo de variables de entorno
# Copia este archivo a ".env" y reemplaza los valores según tu entorno.

# --- Base de datos ---
# Formato: postgresql+psycopg://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=postgresql+psycopg://USER:PASSWORD@HOST:5432/DBNAME

# --- App ---
APP_NAME=TicketSystem
DEBUG=true
SECRET_KEY=changeme   # cambia por un valor seguro

# --- Configuración API ---
API_HOST=0.0.0.0
API_PORT=8000

# --- Seguridad / JWT ---
JWT_SECRET_KEY=changeme   # cambia por un valor seguro
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# --- Otros ---
ENVIRONMENT=development
